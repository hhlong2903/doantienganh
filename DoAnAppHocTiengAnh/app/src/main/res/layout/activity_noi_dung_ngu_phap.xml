<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityNguPhap.NoiDungNguPhap">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_nguphap"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/default_color"
        app:titleTextColor="@android:color/white">

        <TextView
            android:id="@+id/txt_framentnguphap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="40dp"
            android:text="@string/ng_ph_p"
            android:textSize="12pt"
            android:textColor="#FF5722"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"
            android:background="@color/default_color"
            android:src="@drawable/cancel"
            android:contentDescription="TODO" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="50dp"
            android:text="Công thức:"
            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCongThucNP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="50dp"
            android:text="TextView"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="50dp"
            android:text="Ví dụ:"
            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtViDuNP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="50dp"
            android:text="TextView"
            android:textSize="9pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="➯"
                android:textColor="@color/selected_color"
                android:textSize="13pt" />

            <TextView
                android:id="@+id/txtMotaNP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textColor="@color/selected_color"
                android:textSize="9pt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="9pt"
            android:textStyle="bold"

            android:text="Ngữ pháp liên quan" />

        <TextView
            android:id="@+id/txtNguPhap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="8pt"
            android:layout_marginBottom="6dp"
            android:clickable="true"
            android:layout_marginStart="35dp"
            android:textColor="@color/default_color"
            android:onClick="onNguPhapClick" />

        <TextView
            android:id="@+id/txtNguPhap2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="35dp"
            android:textSize="8pt"
            android:clickable="true"
            android:textColor="@color/default_color"
            android:onClick="onNguPhapClick" />

        <TextView
            android:id="@+id/txtNguPhap3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="8pt"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="35dp"
            android:clickable="true"
            android:textColor="@color/default_color"
            android:onClick="onNguPhapClick" />

        <TextView
            android:id="@+id/txtNguPhap4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="TextView"
            android:clickable="true"
            android:textSize="8pt"
            android:textColor="@color/default_color"
            android:onClick="onNguPhapClick" />


    </LinearLayout>
</LinearLayout>
