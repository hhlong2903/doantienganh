<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_nguphap"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/default_color"
        app:titleTextColor="@android:color/white">

        <!-- Thêm ImageButton cho nút quay lại -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="@color/default_color"
            android:src="@drawable/back"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ng_ph_p"
            android:textColor="#FF5722"
            android:textSize="12pt"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <Spinner
        android:id="@+id/spinner_nguphap"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_background" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="20dp"
        android:id="@+id/recyclerview_NguPhap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" /> <!-- Sử dụng drawable bo tròn -->

    <!-- Your content here -->

</LinearLayout>
